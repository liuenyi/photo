<view class="album-container">
  <!-- 六一节日装饰背景 -->
  <view class="festival-decoration">
    <view class="balloon balloon-1"></view>
    <view class="balloon balloon-2"></view>
    <view class="balloon balloon-3"></view>
    <view class="star star-1"></view>
    <view class="star star-2"></view>
    <view class="star star-3"></view>
    <view class="confetti confetti-1"></view>
    <view class="confetti confetti-2"></view>
    <view class="confetti confetti-3"></view>
  </view>

  <!-- 相册信息头部 -->
  <view class="album-header" wx:if="{{albumInfo}}">
    <view class="album-info">
      <text class="album-title">{{albumInfo.name}}</text>
      <text class="album-desc" wx:if="{{albumInfo.description}}">{{albumInfo.description}}</text>
      <text class="album-desc" wx:else>美好回忆收藏馆 ✨</text>
      <view class="album-meta">
        <text class="meta-item">🎨 {{photos.length}}张美照</text>
        <text class="meta-item">🌈 快乐时光</text>
      </view>
    </view>
  </view>
  
  <!-- 照片网格 -->
  <view class="photos-section" wx:if="{{photos.length > 0 && !error}}">
    <view class="photos-grid">
      <view 
        class="photo-item" 
        wx:for="{{photos}}" 
        wx:key="id"
        bindtap="onPhotoTap"
        data-index="{{index}}"
        data-photo="{{item}}"
      >
        <image 
          class="photo-image" 
          src="{{item.thumbnailUrl}}" 
          mode="aspectFill"
          lazy-load
          show-menu-by-longpress="{{false}}"
          webp
          fade-in
        />
        
        <!-- 照片描述覆盖层 -->
        <view class="photo-overlay" wx:if="{{item.description}}">
          <text class="photo-desc">{{item.description}}</text>
        </view>
      </view>
    </view>
    
    <!-- 加载更多指示器 -->
    <view class="load-more" wx:if="{{photos.length > 0}}">
      <view class="loading-indicator" wx:if="{{loading}}">
        <view class="loading-dots">
          <view class="dot"></view>
          <view class="dot"></view>
          <view class="dot"></view>
        </view>
        <text class="loading-text">🎠 精彩内容加载中...</text>
      </view>
      <view class="no-more" wx:elif="{{!hasMore}}">
        <text class="no-more-text">🎉 所有美好回忆都在这里啦</text>
      </view>
    </view>
  </view>
  
  <!-- 加载状态 -->
  <view class="loading-container" wx:if="{{loading && photos.length === 0}}">
    <view class="loading-spinner"></view>
    <text class="loading-text">🎨 正在加载美好回忆...</text>
  </view>
  
  <!-- 错误状态 -->
  <view class="error-container" wx:if="{{error && !loading}}">
    <view class="error-icon">🎈</view>
    <text class="error-title">哎呀，出了点小问题</text>
    <text class="error-desc">网络小精灵走丢了，让我们一起找找它吧~ 🧚‍♀️</text>
    <button class="retry-btn" bindtap="onRetry">🎯 重新寻找</button>
  </view>
  
  <!-- 空状态 -->
  <view class="empty-photos" wx:if="{{!loading && !error && photos.length === 0}}">
    <view class="empty-icon">🎪</view>
    <text class="empty-title">准备创造美好回忆吧！</text>
    <text class="empty-desc">这个相册还没有照片，快去上传第一张美照吧~ 🌟</text>
  </view>
  
  <!-- 刷新提示 -->
  <view class="refresh-tip" wx:if="{{refreshing}}">
    <text>🎠 正在刷新快乐内容...</text>
  </view>
</view> 