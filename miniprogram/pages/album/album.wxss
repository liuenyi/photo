/* Âä†ËΩΩÊõ¥Â§ö */
.load-more {
  padding: 40rpx 30rpx;
  text-align: center;
  background: transparent;
}

.loading-indicator {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.loading-dots {
  display: flex;
  gap: 12rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #ff6b9d 0%, #4ecdc4 100%);
  animation: rainbowBounce 1.8s ease-in-out infinite both;
  box-shadow: 0 4rpx 15rpx rgba(255, 107, 157, 0.3);
}

.dot:nth-child(1) { animation-delay: -0.32s; }
.dot:nth-child(2) { animation-delay: -0.16s; }
.dot:nth-child(3) { animation-delay: 0s; }

@keyframes rainbowBounce {
  0%, 80%, 100% {
    transform: scale(0.8) translateY(0);
    opacity: 0.6;
  }
  40% {
    transform: scale(1.2) translateY(-10rpx);
    opacity: 1;
  }
}

.loading-text {
  font-size: 28rpx;
  background: linear-gradient(135deg, #ff6b9d 0%, #4ecdc4 100%);
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  font-weight: 600;
  animation: festivalPulse 2s ease-in-out infinite;
}

.no-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
}

.no-more-text {
  font-size: 26rpx;
  background: linear-gradient(135deg, #ff6b9d 0%, #4ecdc4 100%);
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  font-weight: 600;
  opacity: 0.8;
}

.has-more {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
  gap: 16rpx;
}

.has-more-text {
  font-size: 26rpx;
  background: linear-gradient(135deg, #ff6b9d 0%, #4ecdc4 100%);
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  font-weight: 600;
  opacity: 0.7;
  animation: festivalPulse 3s ease-in-out infinite;
}

.test-load-more {
  background: linear-gradient(135deg, #ff6b9d 0%, #4ecdc4 100%);
  border: none;
  border-radius: 20rpx;
  color: white;
  font-size: 24rpx;
  font-weight: 600;
  padding: 8rpx 16rpx;
  box-shadow: 0 4rpx 15rpx rgba(255, 107, 157, 0.3);
  animation: festivalPulse 2s ease-in-out infinite;
}

.test-load-more::after {
  border: none;
}

