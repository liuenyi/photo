/* Áõ∏ÂÜåËØ¶ÊÉÖÈ°µÂÆπÂô® */
.album-container {
  background: transparent;
  min-height: 100vh;
  position: relative;
  z-index: 2;
}

/* Áõ∏ÂÜå‰ø°ÊÅØÂ§¥ÈÉ® */
.album-header {
  background: linear-gradient(135deg, #ff6b9d 0%, #4ecdc4 50%, #ffe66d 100%);
  background-size: 300% 300%;
  animation: gradientShift 8s ease infinite;
  padding: 50rpx 30rpx 40rpx;
  color: white;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  border-radius: 0 0 40rpx 40rpx;
  box-shadow: 0 20rpx 40rpx rgba(255, 107, 157, 0.3);
  position: relative;
  overflow: hidden;
}

.album-header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="20" cy="20" r="2" fill="rgba(255,255,255,0.3)"/><circle cx="80" cy="30" r="1.5" fill="rgba(255,255,255,0.4)"/><circle cx="40" cy="70" r="1" fill="rgba(255,255,255,0.5)"/></svg>');
  animation: sparkle 3s ease-in-out infinite;
}

.album-info {
  flex: 1;
  margin-right: 30rpx;
  position: relative;
  z-index: 1;
}

.album-title {
  font-size: 48rpx;
  font-weight: 700;
  line-height: 1.2;
  margin-bottom: 16rpx;
  display: block;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
  animation: festivalBounce 3s ease-in-out infinite;
}

.album-title::before {
  content: "üé® ";
  animation: festivalWiggle 2s ease-in-out infinite;
}

.album-desc {
  font-size: 30rpx;
  opacity: 0.95;
  line-height: 1.4;
  margin-bottom: 24rpx;
  display: block;
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  backdrop-filter: blur(10px);
}

.album-meta {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.meta-item {
  font-size: 24rpx;
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(15px);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  animation: festivalPulse 3s ease-in-out infinite;
}

/* Êìç‰ΩúÊåâÈíÆ */
.album-actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  position: relative;
  z-index: 1;
}

.action-btn {
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(15px);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 24rpx;
  padding: 20rpx 24rpx;
  color: white;
  font-size: 26rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6rpx;
  min-width: 90rpx;
  box-shadow: 0 8rpx 25rpx rgba(255, 107, 157, 0.3);
  transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  animation: festivalPulse 4s ease-in-out infinite;
}

.action-btn::after {
  border: none;
}

.action-btn:active {
  transform: scale(0.95) rotate(2deg);
  background: rgba(255, 255, 255, 0.4);
}

.btn-icon {
  font-size: 32rpx;
  animation: festivalWiggle 2s ease-in-out infinite;
}

.btn-text {
  font-size: 22rpx;
  opacity: 0.95;
  font-weight: 500;
}

/* ÁÖßÁâáÂå∫Âüü */
.photos-section {
  padding: 30rpx 20rpx;
  background: transparent;
}

.photos-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
}

/* ÁÖßÁâáÈ°π */
.photo-item {
  position: relative;
  aspect-ratio: 1;
  border-radius: 20rpx;
  overflow: hidden;
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
  box-shadow: 0 8rpx 25rpx rgba(255, 107, 157, 0.2);
  transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  animation: zoom-in 0.6s ease-out;
}

.photo-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(45deg, 
    rgba(255, 107, 157, 0.1) 0%, 
    rgba(78, 205, 196, 0.1) 25%, 
    rgba(255, 230, 109, 0.1) 50%, 
    rgba(255, 139, 148, 0.1) 75%, 
    rgba(79, 172, 254, 0.1) 100%);
  opacity: 0;
  transition: all 0.3s ease;
  z-index: 1;
}

.photo-item:hover::before {
  opacity: 1;
}

.photo-image {
  width: 100%;
  height: 100%;
  transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  filter: brightness(1.1) saturate(1.2);
  z-index: 2;
  position: relative;
}

.photo-item:active {
  transform: scale(0.95) rotate(1deg);
  box-shadow: 0 15rpx 40rpx rgba(255, 107, 157, 0.4);
}

.photo-item:active .photo-image {
  transform: scale(1.1) rotate(2deg);
}

/* ÁÖßÁâáË¶ÜÁõñÂ±Ç */
.photo-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent 0%, rgba(255, 107, 157, 0.8) 100%);
  padding: 20rpx 12rpx 12rpx;
  color: white;
  z-index: 3;
  backdrop-filter: blur(10px);
}

.photo-desc {
  font-size: 24rpx;
  line-height: 1.3;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  font-weight: 500;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

/* ÁÖßÁâá‰ø°ÊÅØ */
.photo-info {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 6rpx;
  z-index: 4;
}

.photo-size, .photo-date {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10px);
  color: #ff6b9d;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 600;
  border: 1rpx solid rgba(255, 255, 255, 0.5);
