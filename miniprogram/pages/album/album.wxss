}

/* ÊéíÂ∫èÊ®°ÊÄÅÊ°Ü */
.sort-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  z-index: 2000;
}

.sort-content {
  width: 100%;
  background: white;
  border-radius: 30rpx 30rpx 0 0;
  padding: 0;
  animation: slide-up 0.3s ease-out;
}

@keyframes slide-up {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.sort-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #e5e7eb;
}

.sort-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #be185d;
}

.close-btn {
  background: none;
  border: none;
  font-size: 40rpx;
  color: #9ca3af;
  padding: 0;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.close-btn::after {
  border: none;
}

.sort-options {
  padding: 20rpx 0;
}

.sort-option {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  transition: background 0.2s ease;
}

.sort-option:active {
  background: #f3f4f6;
}

.sort-option.active {
  background: #eff6ff;
}

.option-name {
  font-size: 30rpx;
  color: #be185d;
}

.sort-option.active .option-name {
  color: #f5576c;
  font-weight: 500;
}

.check-icon {
  font-size: 32rpx;
  color: #f5576c;
}

/* ÂìçÂ∫îÂºèËÆæËÆ° */
