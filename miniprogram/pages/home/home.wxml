<view class="home-container">
  <!-- 六一节日装饰背景 -->
  <view class="festival-decoration">
    <view class="balloon balloon-1"></view>
    <view class="balloon balloon-2"></view>
    <view class="balloon balloon-3"></view>
    <view class="star star-1"></view>
    <view class="star star-2"></view>
    <view class="star star-3"></view>
    <view class="confetti confetti-1"></view>
    <view class="confetti confetti-2"></view>
    <view class="confetti confetti-3"></view>
  </view>

  <!-- 头部标题区域 -->
  <view class="header">
    <view class="title-section">
      <text class="main-title">咱家的记忆</text>
      <text class="subtitle">{{albums.length}}个美好回忆 🌈</text>
    </view>
  </view>
  
  <!-- 相册网格 -->
  <view class="album-grid" wx:if="{{albums.length > 0 && !error}}">
    <view 
      class="album-card rainbow-border" 
      wx:for="{{albums}}" 
      wx:key="id"
      bindtap="onAlbumTap"
      data-album="{{item}}"
    >
      <!-- 相册封面 -->
      <view class="album-cover">
        <image 
          class="cover-image" 
          src="{{item.coverUrl}}" 
          mode="aspectFill"
          lazy-load
          show-menu-by-longpress
          webp
          fade-in
        />
        <view class="cover-overlay">
          <view class="photo-count festival-pulse">
            <text class="count-icon">🎨</text>
            <text class="count-text">{{item.photoCountText}}</text>
          </view>
        </view>
      </view>
      
      <!-- 相册信息 -->
      <view class="album-info">
        <text class="album-name">{{item.name}}</text>
        <text class="album-desc" wx:if="{{item.description && item.description.trim()}}">{{item.description}}</text>
        <text class="album-desc" wx:else>快乐时光 ✨</text>
      </view>
    </view>
  </view>
  
  <!-- 加载更多指示器 -->
  <view class="load-more" wx:if="{{albums.length > 0 && hasMore}}">
    <view class="loading-indicator" wx:if="{{loading}}">
      <text class="loading-text">🎪 精彩内容加载中...</text>
    </view>
    <view class="no-more" wx:elif="{{!hasMore}}">
      <text class="no-more-text">🎉 所有美好回忆都在这里啦</text>
    </view>
  </view>
  
  <!-- 加载状态 -->
  <view class="loading-container" wx:if="{{loading && albums.length === 0}}">
    <view class="loading-spinner"></view>
    <text class="loading-text">🎠 正在准备你的快乐相册...</text>
  </view>
  
  <!-- 错误状态 -->
  <view class="error-container" wx:if="{{error && !loading}}">
    <view class="error-icon">🎈</view>
    <text class="error-title">哎呀，出了点小问题</text>
    <text class="error-desc">网络小精灵走丢了，让我们一起找找它吧~ 🧚‍♀️</text>
    <button class="retry-btn" bindtap="onRetry">🎯 重新寻找</button>
  </view>
  
  <!-- 空状态 -->
  <view class="empty-container" wx:if="{{!loading && !error && albums.length === 0}}">
    <view class="empty-icon">🎪</view>
    <text class="empty-title">准备开始创造回忆吧！</text>
    <text class="empty-desc">这里还没有相册，快去创建第一个美好回忆吧~ 🌟</text>
  </view>
  
  <!-- 刷新提示 -->
  <view class="refresh-tip" wx:if="{{refreshing}}">
    <text>🎠 正在刷新快乐内容...</text>
  </view>
</view> 