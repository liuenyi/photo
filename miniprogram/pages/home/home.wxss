/* È¶ñÈ°µÂÆπÂô® */
.home-container {
  padding: 0;
  background: transparent;
  min-height: 100vh;
  position: relative;
  z-index: 2;
}

/* Â§¥ÈÉ®Âå∫Âüü */
.header {
  background: linear-gradient(135deg, #ff6b9d 0%, #4ecdc4 50%, #ffe66d 100%);
  background-size: 300% 300%;
  animation: gradientShift 6s ease infinite;
  color: white;
  position: relative;
  overflow: hidden;
  border-radius: 0 0 40rpx 40rpx;
  box-shadow: 0 20rpx 40rpx rgba(255, 107, 157, 0.3);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 40rpx 20rpx;
  margin-bottom: 40rpx;
  z-index: 10;
}

.header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="20" cy="20" r="2" fill="rgba(255,255,255,0.3)"/><circle cx="80" cy="30" r="1.5" fill="rgba(255,255,255,0.4)"/><circle cx="40" cy="70" r="1" fill="rgba(255,255,255,0.5)"/></svg>');
  animation: sparkle 3s ease-in-out infinite;
}

.title-section {
  display: flex;
  flex-direction: column;
  position: relative;
  z-index: 1;
}

.main-title {
  font-size: 52rpx;
  font-weight: bold;
  color: #2c3e50;
  text-shadow: 2rpx 2rpx 8rpx rgba(255, 107, 157, 0.3);
  margin-bottom: 8rpx;
}

.main-title::before {
  content: "üéà ";
  animation: festivalWiggle 2s ease-in-out infinite;
}

.main-title::after {
  content: " üéä";
  animation: festivalWiggle 2s ease-in-out infinite reverse;
}

.subtitle {
  font-size: 28rpx;
  color: #7f8c8d;
  font-weight: 500;
}

.header-actions {
  display: flex;
  align-items: center;
}

.setting-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #ff6b9d, #c44fdd);
  border-radius: 50%;
  font-size: 32rpx;
  box-shadow: 0 8rpx 16rpx rgba(255, 107, 157, 0.3);
  transition: all 0.3s ease;
}

.setting-btn:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 8rpx rgba(255, 107, 157, 0.4);
}

/* Áõ∏ÂÜåÁΩëÊ†º */
.album-grid {
  padding: 30rpx 20rpx;
  background: transparent;
  display: grid;
  grid-template-columns: 1fr;
  gap: 20rpx;
}

/* Áõ∏ÂÜåÂç°Áâá */
.album-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-radius: 28rpx;
  box-shadow: 0 12rpx 35rpx rgba(255, 107, 157, 0.25);
  overflow: hidden;
  transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  height: 520rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  position: relative;
  animation: zoom-in 0.6s ease-out;
}

.album-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(45deg, 
    rgba(255, 107, 157, 0.1) 0%, 
    rgba(78, 205, 196, 0.1) 25%, 
    rgba(255, 230, 109, 0.1) 50%, 
    rgba(255, 139, 148, 0.1) 75%, 
    rgba(79, 172, 254, 0.1) 100%);
  opacity: 0;
  transition: all 0.3s ease;
  z-index: 1;
}

.album-card:hover::before {
  opacity: 1;
}

.album-card:active {
  transform: scale(0.95) rotate(1deg);
  box-shadow: 0 20rpx 50rpx rgba(255, 107, 157, 0.4);
}

/* Áõ∏ÂÜåÂ∞ÅÈù¢ */
.album-cover {
  position: relative;
  height: 400rpx;
  overflow: hidden;
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
  z-index: 2;
}

.cover-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  filter: brightness(1.1) saturate(1.2);
}

.album-card:active .cover-image {
  transform: scale(1.1) rotate(2deg);
}

.cover-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(transparent 0%, rgba(255, 107, 157, 0.2) 100%);
  display: flex;
  align-items: flex-end;
  justify-content: flex-end;
  padding: 12rpx;
  z-index: 3;
}

.photo-count {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 15rpx rgba(255, 107, 157, 0.3);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  animation: festivalPulse 3s ease-in-out infinite;
}

.count-icon {
  font-size: 20rpx;
  margin-right: 6rpx;
  animation: festivalWiggle 2s ease-in-out infinite;
}

.count-text {
  font-size: 20rpx;
  color: #ff6b9d;
  font-weight: 600;
  text-shadow: 0 1rpx 2rpx rgba(255, 107, 157, 0.3);
}

/* Áõ∏ÂÜå‰ø°ÊÅØ */
.album-info {
  padding: 18rpx 20rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(15px);
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
  z-index: 2;
}

.album-name {
  font-size: 28rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #ff6b9d 0%, #4ecdc4 100%);
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  line-height: 1.3;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-shadow: 0 2rpx 4rpx rgba(255, 107, 157, 0.2);
}

.album-desc {
  font-size: 22rpx;
  color: #b4a7d6;
  line-height: 1.3;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  opacity: 0.9;
  font-weight: 500;
}

/* Âä†ËΩΩÊõ¥Â§ö */
.load-more {
  padding: 40rpx 20rpx;
  text-align: center;
  background: transparent;
}

.loading-text, .no-more-text {
  font-size: 28rpx;
  background: linear-gradient(135deg, #ff6b9d 0%, #4ecdc4 100%);
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  font-weight: 600;
  animation: festivalPulse 2s ease-in-out infinite;
}

/* Âä†ËΩΩÁä∂ÊÄÅ */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 400rpx;
  padding: 80rpx 40rpx;
  background: transparent;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 8rpx solid rgba(255, 255, 255, 0.3);
  border-top: 8rpx solid #ff6b9d;
  border-right: 8rpx solid #4ecdc4;
  border-bottom: 8rpx solid #ffe66d;
  border-left: 8rpx solid #ff8b94;
  border-radius: 50%;
  animation: rainbowSpin 1.5s linear infinite;
  margin-bottom: 30rpx;
}

@keyframes rainbowSpin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 32rpx;
  background: linear-gradient(135deg, #ff6b9d 0%, #4ecdc4 100%);
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  font-weight: 600;
  animation: festivalBounce 2s ease-in-out infinite;
}

/* ÈîôËØØÁä∂ÊÄÅ */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 400rpx;
  padding: 80rpx 40rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20px);
  margin: 20rpx;
  border-radius: 32rpx;
  text-align: center;
  box-shadow: 0 20rpx 40rpx rgba(255, 107, 157, 0.2);
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  animation: festivalWiggle 2s ease-in-out infinite;
}

.error-title {
  font-size: 36rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #ff6b9d 0%, #4ecdc4 100%);
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin-bottom: 16rpx;
}

.error-desc {
  font-size: 28rpx;
  color: #b4a7d6;
  margin-bottom: 30rpx;
  line-height: 1.5;
}

.retry-btn {
  background: linear-gradient(135deg, #ff6b9d 0%, #4ecdc4 100%);
  color: white;
  padding: 16rpx 40rpx;
  border-radius: 25rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 25rpx rgba(255, 107, 157, 0.4);
  transition: all 0.3s ease;
  animation: festivalPulse 3s ease-in-out infinite;
}

.retry-btn:active {
  transform: translateY(2rpx) scale(0.98);
  box-shadow: 0 4rpx 15rpx rgba(255, 107, 157, 0.6);
}

/* Á©∫Áä∂ÊÄÅ */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 400rpx;
  padding: 80rpx 40rpx;
  background: rgba(255, 255, 255, 0.9);
