.login-container {
  height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  position: relative;
  overflow: hidden;
}

.login-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="20" cy="20" r="2" fill="rgba(255,255,255,0.1)"/><circle cx="80" cy="30" r="1.5" fill="rgba(255,255,255,0.15)"/><circle cx="40" cy="70" r="1" fill="rgba(255,255,255,0.2)"/></svg>');
  animation: sparkle 6s ease-in-out infinite;
}

.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  max-width: 400rpx;
  position: relative;
  z-index: 1;
}

.logo-section {
  text-align: center;
  margin-bottom: 100rpx;
}

.logo {
  width: 120px;
  height: 120px;
  border-radius: 24px;
  margin-bottom: 20px;
  background-color: rgba(255, 255, 255, 0.2);
}

.app-title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 20rpx;
  text-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.3);
  animation: titleFloat 3s ease-in-out infinite;
}

.app-subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 400;
}

.password-section {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 40rpx;
}

.password-input {
  position: absolute;
  left: -9999rpx;
  opacity: 0;
}

.password-dots {
  display: flex;
  gap: 30rpx;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  cursor: pointer;
}

.dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.5);
  background-color: transparent;
  transition: all 0.3s ease;
  position: relative;
}

.dot.filled {
  background-color: white;
  border-color: white;
  box-shadow: 0 0 20rpx rgba(255, 255, 255, 0.6);
  transform: scale(1.2);
}

.dot.filled::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.loading {
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-text {
  color: white;
  font-size: 28rpx;
  font-weight: 500;
  animation: pulse 1.5s ease-in-out infinite;
}

.error-tips {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 30rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 25rpx;
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
}

.error-text {
  color: #ffb3ba;
  font-size: 26rpx;
  font-weight: 500;
  text-align: center;
}

.input-tip {
  margin-top: 20rpx;
  opacity: 0.8;
}

.tip-text {
  color: rgba(255, 255, 255, 0.7);
  font-size: 24rpx;
  text-align: center;
}

/* 动画效果 */
@keyframes sparkle {
  0%, 100% { 
    opacity: 0.3; 
    transform: translateY(0); 
  }
  50% { 
    opacity: 0.8; 
    transform: translateY(-10rpx); 
  }
}

@keyframes titleFloat {
  0%, 100% { 
    transform: translateY(0); 
  }
  50% { 
    transform: translateY(-10rpx); 
  }
}

@keyframes pulse {
  0%, 100% { 
    opacity: 1; 
  }
  50% { 
    opacity: 0.6; 
  }
} 